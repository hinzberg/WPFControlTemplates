<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DemoTemplates.Templates.ToolTip">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Templates/_Colors/ToolTip/ToolTipColorDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="ToolTipTemplate" TargetType="ToolTip">
        <Border Name="Border" BorderThickness="1" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                Background="{StaticResource ContentBackground}" BorderBrush="{StaticResource ContentBorderBrush}">
            <ContentPresenter HorizontalAlignment="Center" Margin="4" VerticalAlignment="Top"/>
        </Border>
    </ControlTemplate>
</ResourceDictionary>