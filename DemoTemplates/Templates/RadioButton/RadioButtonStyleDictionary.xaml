<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DemoTemplates.Templates.RadioButton">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Templates/RadioButton/RadioButtonTemplateDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="{x:Type RadioButton}" TargetType="{x:Type RadioButton}">
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="FocusVisualStyle"  Value="{DynamicResource RadioButtonFocusVisual}" />
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="14px"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="Template" Value="{StaticResource CustomRadioButtonTemplate}">
        </Setter>
    </Style>
</ResourceDictionary>