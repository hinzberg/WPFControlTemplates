<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="RadioButtonBackground" Color="White"/>
    <SolidColorBrush x:Key="RadioButtonBackgroundBorder" Color="#525E91"/>
    
    <SolidColorBrush x:Key="CheckMarkBackground" Color="#525E91"/>
    <SolidColorBrush x:Key="CheckMarkColor" Color="#525E91"/>

    <SolidColorBrush x:Key="RadionButtonMouseOverBrush" Color="#DEE5F6"/>

    <ControlTemplate x:Key="CustomRadioButtonTemplate" TargetType="{x:Type RadioButton}">
        <BulletDecorator >
            <BulletDecorator.Bullet>
                <Grid Width="14" Height="14">
                    <Ellipse x:Name="Border" StrokeThickness="1" Stroke="{StaticResource RadioButtonBackgroundBorder}"
                             Fill="{StaticResource RadioButtonBackground}">
                    </Ellipse>
                    <Path x:Name="CheckMark"
                          Fill="{StaticResource CheckMarkBackground}">
                        <Path.Data>
                            <EllipseGeometry Center="7,7" RadiusX="4" RadiusY="4"/>
                        </Path.Data>
                    </Path>
                </Grid>
            </BulletDecorator.Bullet>
            <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" RecognizesAccessKey="True" />
        </BulletDecorator>
        
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="false">
                <Setter Property="Visibility" Value="Collapsed" TargetName="CheckMark"/>
            </Trigger>

            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Visibility" Value="Visible" TargetName="CheckMark"/>
            </Trigger>

            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Fill" Value="{StaticResource RadionButtonMouseOverBrush}" TargetName="Border"/>
            </Trigger>

        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{x:Type RadioButton}" TargetType="{x:Type RadioButton}">
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="FocusVisualStyle"  Value="{DynamicResource RadioButtonFocusVisual}" />
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="14px"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="Template" Value="{StaticResource CustomRadioButtonTemplate}">
        </Setter>
    </Style>
</ResourceDictionary>