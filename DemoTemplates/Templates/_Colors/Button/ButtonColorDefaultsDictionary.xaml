<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ButtonNormalBackground" Color="White" />
    <SolidColorBrush x:Key="ButtonNormalBorder" Color="Black" />
    <SolidColorBrush x:Key="ButtonContentColor" Color="Black" />
    
    <SolidColorBrush x:Key="ButtonContentMouseOver" Color="gray" />
    <SolidColorBrush x:Key="ButtonContentClick" Color="gray" />

    <LinearGradientBrush x:Key="ButtonBackgroundOverlay"  StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="LightGray"  Offset="0" />
        <GradientStop Color="LightGray" Offset="0.5" />
        <GradientStop Color="LightGray" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonBackgroundClick"  StartPoint="0,0" EndPoint="1,0">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="Silver" Offset="0" />
                <GradientStop Color="Silver" Offset="0.4" />
                <GradientStop Color="Silver"  Offset="0.6" />
                <GradientStop Color="Silver"  Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    
</ResourceDictionary>