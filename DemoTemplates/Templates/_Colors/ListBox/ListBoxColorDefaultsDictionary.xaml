<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DemoTemplates.Templates._Colors.ListBox">


    <SolidColorBrush x:Key="ListBoxBackground">White</SolidColorBrush>
    <SolidColorBrush x:Key="ListBoxBorder">gray </SolidColorBrush>

    <!--Event Trigger-->
    <SolidColorBrush x:Key="ListBoxItemMouseOver">lightgray</SolidColorBrush>
    <SolidColorBrush x:Key="ListBoxItemFocused">gray</SolidColorBrush>

    <SolidColorBrush x:Key="ListBoxIsEnabledBackground">darkgray</SolidColorBrush>
</ResourceDictionary>