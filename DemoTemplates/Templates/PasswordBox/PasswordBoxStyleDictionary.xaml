<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PasswordBoxCustomInnerBackground" Color="White"/>
    <SolidColorBrush x:Key="PasswordBoxCustomBorderBrush" Color="#525E91"/>

    <ControlTemplate x:Key="CustomPasswordBoxTemplate" TargetType="{x:Type PasswordBox}">
        <Border x:Name="Border" BorderBrush="{StaticResource PasswordBoxCustomBorderBrush}" 
                Background="{StaticResource PasswordBoxCustomInnerBackground}"
                CornerRadius="2" Padding="2" BorderThickness="1">
            <ScrollViewer x:Name="PART_ContentHost"/>
        </Border>
    </ControlTemplate>
    
    <Style x:Key="{x:Type PasswordBox}"  TargetType="{x:Type PasswordBox}">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="14px"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="PasswordChar" Value="●" />
        <Setter Property="AllowDrop" Value="true" />
        <Setter Property="Template" Value="{StaticResource CustomPasswordBoxTemplate}">
        </Setter>
    </Style>


</ResourceDictionary>